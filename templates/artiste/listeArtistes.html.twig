{% extends 'base.html.twig' %}

{% block title %}Liste des artistes{% endblock %}

{% block body %}
<h1 class ="pt-2 text-center"></h1>
<hr>
<div class="row pt-2">
    {% for leArtiste in lesArtistes %}
        {% set nbAlbums = {{leArtiste.albums|length}} %}
   
    <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3">
            <div class="card mb-3">
                <h3 class="card-header">{{leArtiste.nom}}</h3>
                <div class="card-body">
                    <h5 class="card-title">
                     <a href="" class="badge bagde-succes">{{nbAlbums}} {% if nbAlbums > 1%} albums {% else %} album {% endif %} </a> </h5>

                </div>
                <img class=" mx-auto d-block" style="height: 200px; width:100%; display: block;" src="{{leArtiste.image}}" alt="">
                <div class="card-body">
                    <p class="card-text">{{leArtiste.description}}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"> {% if leArtiste.type == 0 %} Artiste solo {% else %} Groupe {% endif %}</li>
                    <li class="list-group-item"> {{leArtiste.site}} </li>
                </ul>
            </div>
    </div>
{% endfor %}

</div>

{% endblock %}
